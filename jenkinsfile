properties([pipelineTriggers([githubPush()])])
pipeline {

    environment {
        GIT_URL = 'https://github.com/fpunthira/performance_test_lab.git'
    }
    /* specify nodes for executing */
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }        
        stage('test') {

            parallel {
                stage('Dev stage') {
                    steps {
                        sh "git branch"
                        sh "git status"
                        dir("dev") {
                            echo ">> Run deploy applications "
                        }
                    }
                }
                stage('Production stage') {
                    steps {
                        dir("prod") {
                            echo ">> Run deploy applications "
                        }
                    }
                }
            }

        }
    }
 
    /* Cleanup workspace */
    post {
       always {
           deleteDir()
       }
   }
}