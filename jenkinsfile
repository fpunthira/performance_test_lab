properties([pipelineTriggers([githubPush()])])
pipeline {

    environment {
        GIT_URL = 'https://github.com/fpunthira/performance_test_lab.git'
        registry = 'app'
    }
    /* specify nodes for executing */
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }        
        stage('test') {

            parallel {
                stage('Dev stage') {
                    steps {
                        sh 'git branch'
                        sh 'git status'
                        sh 'printenv'
                        sh 'ls -al'
                        sh 'id'
                        sh "echo ${registry}"
                        dir("test_server") {
                            sh "docker build ${registry}:${env.BUILD_NUMBER}"
                        }
                        dir("dev") {
                            echo ">> Run deploy applications "
                        }
                        sh "ls -la"
                    }
                }
                stage('Production stage') {
                    steps {
                        dir("prod") {
                            echo ">> Run deploy applications "
                        }
                    }
                }
            }

        }
    }
 
    /* Cleanup workspace */
    post {
       always {
           deleteDir()
       }
   }
}